<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AvaloniaUI.ViewModels"
        x:Class="AvaloniaUI.Views.DiagnosticsGamepadWindow"
        x:DataType="vm:DiagnosticsGamepadViewModel"
        Width="480" Height="600"
        Title="Diagnóstico de Gamepad">
  <StackPanel Margin="12" Spacing="8">
    <TextBlock Text="Diagnóstico de Gamepad"
               FontSize="18"
               FontWeight="Bold"/>

    <StackPanel Orientation="Horizontal" Spacing="4">
      <TextBlock Text="Conectado:"/>
      <TextBlock Text="{Binding Connected}"/>
    </StackPanel>

    <TextBlock Text="{Binding DeviceName}"
               FontWeight="SemiBold"/>
    <TextBlock Text="{Binding DeviceType}"
               Opacity="0.8"/>

    <TextBlock Text="Entradas (snapshot):"
               Margin="0,12,0,0"
               FontWeight="Bold"/>

    <ListBox ItemsSource="{Binding Inputs}">
      <ListBox.ItemTemplate>
        <DataTemplate x:DataType="vm:InputStatus">
          <DockPanel Margin="0,2">
            <TextBlock Text="{Binding Name}"
                       Width="120"
                       DockPanel.Dock="Left"/>
            <TextBlock Text="{Binding Value, StringFormat='F3'}"/>
          </DockPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </StackPanel>
</Window>
